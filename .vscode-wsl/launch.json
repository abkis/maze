{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch C++ Program",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/main", // Path to the compiled output file
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb", // Or "lldb" for macOS
          "miDebuggerPath": "/usr/bin/gdb", // Update for your system (e.g., gdb, lldb)
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "preLaunchTask": "build" // Matches the name of your build task in tasks.json
      }
  ]
}